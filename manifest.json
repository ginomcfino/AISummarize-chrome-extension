{
    "manifest_version": 3,
    "name": "AI Text Summarizer",
    "version": "1.0",
    "description": "Summarize highlighted text on any webpage.",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://api.openai.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}